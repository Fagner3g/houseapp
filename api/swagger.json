    "/new-user": {
      "post": {
        "operationId": "createNewUser",
        "tags": [
          "auth"
        ],
        "description": "Authenticate with email",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ddd": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2,
                    "pattern": "^\\d+$"
                  },
                  "phone": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 10
                  },
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
                  }
                },
                "required": [
                  "ddd",
                  "phone",
                  "name",
                  "email"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
